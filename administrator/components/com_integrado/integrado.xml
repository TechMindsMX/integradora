<?xml version="1.0" encoding="utf-8"?>
<extension type="component" version="1.6.0" method="upgrade">

	<name>Integrado</name>
	<!-- The following elements are optional and free of formatting conttraints -->
	<creationDate>Juliio 2014</creationDate>
	<author>Ricardo Lyon</author>
	<authorEmail>ricardolyon@gmail.com</authorEmail>
	<authorUrl></authorUrl>
	<copyright></copyright>
	<license></license>
	<!--  The version string is recorded in the components table -->
	<version>0.0.1</version>
	<!-- The description is optional and defaults to the name -->
	<description>Componente de integrado para Integradora</description>
	<update>
		<!-- Runs on update; New in 1.6 -->
		<schemas>
			<schemapath type="mysql">sql/updates/mysql</schemapath>
		</schemas>
	</update>

	<!-- Site Main File Copy Section -->
	<!-- Note the folder attribute: This attribute describes the folder
	to copy FROM in the package to install therefore files copied
	in this section are copied from /site/ in the package -->
	<files folder="site">
		<filename>index.html</filename>
		<filename>integrado.php</filename>
	</files>
	<administration>
		<!-- Administration Menu Section -->
		<menu>Integrados</menu>
		<!-- Administration Main File Copy Section -->
		<!-- Note the folder attribute: This attribute describes the folder
		to copy FROM in the package to install therefore files copied
		in this section are copied from /admin/ in the package -->
		<files folder="admin">
			<!-- Admin Main File Copy Section -->
			<filename>index.html</filename>
			<filename>integrado.php</filename>
			<filename>controller.php</filename>
			<!-- SQL files section -->
			<folder>sql</folder>
			<folder>models</folder>
			<folder>views</folder>
			<folder>controllers</folder>
			<folder>language</folder>
			<folder>forms</folder>
		</files>
	</administration>

</extension>

