<?xml version="1.0" encoding="utf-8"?>
<extension version="3.1" type="plugin" group="user">
	<name>plg_user_integrado</name>
	<author>Ricardo Lyon</author>
	<creationDate>Julio 2014</creationDate>
	<copyright></copyright>
	<license>GNU General Public License version 2 or later; see LICENSE.txt</license>
	<authorEmail>ricardolyon@gmail.com</authorEmail>
	<authorUrl></authorUrl>
	<version>3.0.0</version>
	<description>PLG_USER_INTEGRADO_XML_DESCRIPTION</description>
	<files>
		<filename plugin="joomla">integrado.php</filename>
		<filename>index.html</filename>
		<folder>postinstall</folder>
	</files>
	<languages>
		<language tag="en-GB">en-GB.plg_user_integrado.ini</language>
		<language tag="es-ES">es-ES.plg_user_integrado.ini</language>
	</languages>
	<config>
		<fields name="params">

			<fieldset name="basic">

				<field name="autoregister" type="radio"
					class="btn-group btn-group-yesno"
					default="1"
					description="PLG_USER_INTEGRADO_FIELD_AUTOREGISTER_DESC"
					label="PLG_USER_INTEGRADO_FIELD_AUTOREGISTER_LABEL"
				>
					<option value="1">JYES</option>
					<option value="0">JNO</option>
				</field>

				<field name="mail_to_user"
					type="radio"
					class="btn-group btn-group-yesno"
					default="1"
					label="PLG_USER_INTEGRADO_FIELD_MAILTOUSER_LABEL"
					description="PLG_USER_INTEGRADO_FIELD_MAILTOUSER_DESC"
				>
					<option value="1">JYES</option>
					<option value="0">JNO</option>
				</field>

			</fieldset>

		</fields>
	</config>
</extension>
